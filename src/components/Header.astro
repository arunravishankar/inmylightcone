---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<header>
	<div class="header-section">
		<div class="header-frame">
			<div class="header-content">
				<div class="title-row">
					<div class="text-content">
						<h1>{SITE_TITLE}</h1>
						<h2>{SITE_DESCRIPTION}</h2>
					</div>
					<div class="profile-image">
						<img src="/profile.jpg" alt="Arun Ravishankar" />
					</div>
				</div>
			</div>
		</div>
	</div>
</header>
<nav>
	<HeaderLink href="/">home</HeaderLink>
	<HeaderLink href="/posts">posts</HeaderLink>
	<HeaderLink href="https://www.linkedin.com/in/arunravishankar" target="_blank">linkedin</HeaderLink>
	<HeaderLink href="https://bsky.app/profile/arunravishankar.bsky.social" target="_blank">bluesky</HeaderLink>
</nav>
<style>
	.header-section {
		width: 100%;
		margin: 0;
		padding: 0;
		display: flex !important;
		align-items: flex-start !important;
		justify-content: flex-start !important;
		flex-wrap: nowrap !important;
	}

	.header-frame {
		width: 100%;
		margin: 0;
		padding: 0;
		max-width: none !important;
	}

	.header-content {
		width: 100%;
		margin: 0;
		padding: 0;
	}

	.title-row {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 100%;
		margin: 0;
		padding: 0;
	}

	.text-content {
		text-align: left;
		flex: 1;
		padding-right: 2rem;
		margin: 0;
	}

	.profile-image {
		margin-left: 2rem;
		flex-shrink: 0;
	}

	.profile-image img {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		object-fit: cover;
	}

	h1 {
		margin: 0;
		text-align: left;
		width: 100%;
	}

	h2 {
		margin: 0.5em 0;
		text-align: left;
		width: 100%;
	}
</style>
